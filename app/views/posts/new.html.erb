<h1>This is new!</h1>
<% if !@post.errors.empty? %>
	<% @post.errors.full_messages.each do |error| %>
		<h4 style="color:red;"><%= error %></h4>
	<%end %>
	<% end %>
<%= form_for @post do |f| %>
	<%= f.label :title %> :	
	<%= f.text_field :title %>
	<br/>
	<%= f.label :content %>:<br/>
	<%= f.text_area :content %>
	<br/>
	<%= f.submit %>
<% end %>